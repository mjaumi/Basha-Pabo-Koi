<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_ad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".AdCreateActivity">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_ad"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:itemIconTint="@drawable/drawer_item_color"
        app:itemTextColor="@drawable/drawer_item_color"
        app:menu="@menu/main_menu">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/switch_lang_dark"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="316dp"
            app:lottie_fileName="switch_dark.json" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/switch_lang"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="316dp"
            app:lottie_fileName="switch_light.json" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/switch_mode_dark"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="366dp"
            app:lottie_fileName="switch_dark.json" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/switch_mode"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="366dp"
            app:lottie_fileName="switch_light.json" />
    </com.google.android.material.navigation.NavigationView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/orange_base">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/return_from_description"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:contentDescription="@string/todo"
            android:rotation="180"
            android:src="@drawable/right"
            app:backgroundTint="@color/white"
            app:fabCustomSize="50dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.551" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="@string/ad_description"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/edit_ad_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:elevation="20dp"
            app:backgroundTint="@color/white"
            android:src="@drawable/ic_edit"
            android:enabled="false"
            android:alpha="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintHorizontal_bias="0.95"
            android:contentDescription="@string/todo" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1">

            <ScrollView
                android:id="@+id/scrollView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ScrollViewCount">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/description_image_shower"
                        android:layout_width="match_parent"
                        android:layout_height="300dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/description_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/roboto"
                            android:text="Rent is going on"
                            android:textColor="@color/orange_base"
                            android:textSize="30sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/ic_address_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_profile_address"
                            app:tint="@color/orange_base"
                            android:contentDescription="@string/todo"/>

                        <TextView
                            android:id="@+id/address_description_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="B-15, G-4, Motijheel, A.G.B colony, Hospital zone, Dhaka-1000."
                            android:textColor="@color/orange_base"
                            android:fontFamily="@font/roboto"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:id="@+id/ic_flat_type_description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_flat_type"
                                    app:tint="@color/orange_base"
                                    android:contentDescription="@string/todo"/>

                                <TextView
                                    android:id="@+id/flat_type_description_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:text="sublet"
                                    android:fontFamily="@font/roboto"
                                    android:textColor="@color/orange_base"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:id="@+id/ic_vacant_from_description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_month"
                                    app:tint="@color/orange_base"
                                    android:contentDescription="@string/todo"/>

                                <TextView
                                    android:id="@+id/vacant_from_description_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:text="1 April, 2021"
                                    android:fontFamily="@font/roboto"
                                    android:textColor="@color/orange_base"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:id="@+id/ic_bedroom_description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_bedroom"
                                    app:tint="@color/orange_base"
                                    android:contentDescription="@string/todo"/>

                                <TextView
                                    android:id="@+id/bedroom_description_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:text="2 bedrooms"
                                    android:fontFamily="@font/roboto"
                                    android:textColor="@color/orange_base"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:id="@+id/ic_religion_description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_religion"
                                    app:tint="@color/orange_base"
                                    android:contentDescription="@string/todo"/>

                                <TextView
                                    android:id="@+id/religion_description_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:text="@string/muslim"
                                    android:fontFamily="@font/roboto"
                                    android:textColor="@color/orange_base"
                                    android:textSize="16sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="50dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:id="@+id/ic_washroom_description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_washroom"
                                    app:tint="@color/orange_base"
                                    android:contentDescription="@string/todo"/>

                                <TextView
                                    android:id="@+id/washroom_description_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:text="3 washrooms"
                                    android:fontFamily="@font/roboto"
                                    android:textColor="@color/orange_base"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:id="@+id/ic_veranda_description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_veranda"
                                    app:tint="@color/orange_base"
                                    android:contentDescription="@string/todo"/>

                                <TextView
                                    android:id="@+id/veranda_description_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:text="3 verandas"
                                    android:fontFamily="@font/roboto"
                                    android:textColor="@color/orange_base"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:id="@+id/ic_floor_description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_floor"
                                    app:tint="@color/orange_base"
                                    android:contentDescription="@string/todo"/>

                                <TextView
                                    android:id="@+id/floor_description_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:text="5th floor"
                                    android:fontFamily="@font/roboto"
                                    android:textColor="@color/orange_base"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:id="@+id/ic_genre_description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_genre"
                                    app:tint="@color/orange_base"
                                    android:contentDescription="@string/todo"/>

                                <TextView
                                    android:id="@+id/genre_description_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:text="@string/only_student_male"
                                    android:fontFamily="@font/roboto"
                                    android:textColor="@color/orange_base"
                                    android:textSize="16sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/roboto"
                            android:text="@string/other_charges"
                            android:textColor="@color/orange_base"
                            android:textSize="25sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:id="@+id/ic_electricity_description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_electricity"
                                    app:tint="@color/orange_base"
                                    android:contentDescription="@string/todo"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:fontFamily="@font/roboto"
                                    android:text="@string/taka_sign"
                                    android:textColor="@color/orange_base"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/electricity_bill_description_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:text="1000 electricity bill"
                                    android:fontFamily="@font/roboto"
                                    android:textColor="@color/orange_base"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:id="@+id/ic_gas_description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_gas"
                                    app:tint="@color/orange_base"
                                    android:contentDescription="@string/todo"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:fontFamily="@font/roboto"
                                    android:text="@string/taka_sign"
                                    android:textColor="@color/orange_base"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/gas_bill_description_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:text="1000 gas bill"
                                    android:textColor="@color/orange_base"
                                    android:textSize="16sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="50dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:id="@+id/ic_water_description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_water"
                                    app:tint="@color/orange_base"
                                    android:contentDescription="@string/todo"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:fontFamily="@font/roboto"
                                    android:text="@string/taka_sign"
                                    android:textColor="@color/orange_base"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/water_bill_description_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:text="1000 water bill"
                                    android:textColor="@color/orange_base"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:id="@+id/ic_service_description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_service"
                                    app:tint="@color/orange_base"
                                    android:contentDescription="@string/todo"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:fontFamily="@font/roboto"
                                    android:text="@string/taka_sign"
                                    android:textColor="@color/orange_base"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/service_charge_description_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:text="5000 service charge"
                                    android:textColor="@color/orange_base"
                                    android:textSize="16sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/roboto"
                            android:text="@string/other_facilities"
                            android:textColor="@color/orange_base"
                            android:textSize="25sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/checkbox_value_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/roboto"
                            android:text="@string/details"
                            android:textColor="@color/orange_base"
                            android:textSize="25sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/description_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="70dp"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:id="@+id/description_description_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:text="Onnnk xooooosssss"
                            android:textColor="@color/orange_base"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/ad_by_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/roboto"
                            android:text="@string/ad_by"
                            android:textColor="@color/orange_base"
                            android:textSize="25sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="TooManyViews">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:id="@+id/owner_details_holder"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center">

                                    <com.makeramen.roundedimageview.RoundedImageView
                                        android:id="@+id/pro_pic_description"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginStart="3dp"
                                        android:background="@drawable/profile_image_bg"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/user"
                                        app:riv_oval="true"
                                        tools:ignore="TooDeepLayout" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    tools:ignore="TooManyViews">

                                    <TextView
                                        android:id="@+id/description_profile_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:fontFamily="@font/roboto_condensed_bold"
                                        android:text="@string/profile_name"
                                        android:textColor="@color/orange_base"
                                        android:textSize="20sp" />

                                    <TextView
                                        android:id="@+id/description_phone_no"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:fontFamily="@font/roboto_thin"
                                        android:text="@string/number_eg"
                                        android:textColor="@color/orange_base"
                                        android:textSize="16sp" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/rate_this_ad_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/roboto"
                            android:text="@string/rate_this_ad"
                            android:textColor="@color/orange_base"
                            android:textSize="25sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rating_star_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    tools:ignore="UselessParent">

                                    <RatingBar
                                        android:id="@+id/ad_rating_description"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:progressTint="@color/orange_base" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/find_on_map_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="60dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/find_on_map"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="20dp"
                            app:cardBackgroundColor="@color/orange_base"
                            android:clickable="true"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_address"
                                    app:tint="@color/white"
                                    android:contentDescription="@string/todo" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="Find on map"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto_thin"
                                    android:textSize="20sp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_nav"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/scrollView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/orange_base"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/roboto_condensed_bold"
                        android:text="@string/taka_sign"
                        android:textColor="@color/orange_base"
                        android:textSize="25sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/rent_description_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/roboto_condensed_bold"
                        android:text="@string/rent_eg"
                        android:textColor="@color/orange_base"
                        android:textSize="25sp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView25"
                        app:layout_constraintStart_toEndOf="@+id/textView25"
                        app:layout_constraintTop_toTopOf="@+id/textView25" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/add_to_wish_list_btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="120dp"
                        android:src="@drawable/ic_wish_list"
                        app:backgroundTint="@color/orange_base"
                        app:fabCustomSize="50dp"
                        android:clickable="true"
                        android:contentDescription="@string/todo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/rent_done_btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_done"
                        app:backgroundTint="@color/orange_base"
                        app:fabCustomSize="50dp"
                        android:clickable="true"
                        android:enabled="false"
                        android:alpha="0.0"
                        android:contentDescription="@string/todo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/description_to_chat"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="10dp"
                        android:clickable="true"
                        android:background="@drawable/button_bg"
                        android:src="@drawable/ic_chat_btn"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/todo"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.bottomnavigation.BottomNavigationView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>