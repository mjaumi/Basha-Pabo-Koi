<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_ad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".AdCreateActivity">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_ad"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:itemIconTint="@drawable/drawer_item_color"
        app:itemTextColor="@drawable/drawer_item_color"
        app:menu="@menu/main_menu">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/switch_lang_dark"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="316dp"
            app:lottie_fileName="switch_dark.json" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/switch_lang"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="316dp"
            app:lottie_fileName="switch_light.json" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/switch_mode_dark"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="366dp"
            app:lottie_fileName="switch_dark.json" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/switch_mode"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="366dp"
            app:lottie_fileName="switch_light.json" />
    </com.google.android.material.navigation.NavigationView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/orange_base">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/return_from_ad"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:contentDescription="@string/todo"
            android:rotation="180"
            android:src="@drawable/right"
            app:backgroundTint="@color/white"
            app:fabCustomSize="50dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.551" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="@string/create_an_ad_title"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ScrollViewCount">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="58dp"
                            android:fontFamily="@font/roboto"
                            android:text="@string/basic_information"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="120dp"
                        android:fontFamily="@font/roboto"
                        android:text="@string/title"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/ad_title"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:autofillHints="Enter your address"
                        android:background="@drawable/edit_text_bg"
                        android:fontFamily="@font/roboto"
                        android:inputType="text"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textCursorDrawable="@drawable/cursor_color"
                        tools:ignore="LabelFor,RtlSymmetry" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="1dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="0dp"
                                android:layout_marginEnd="120dp"
                                android:fontFamily="@font/roboto"
                                android:text="@string/rent"
                                android:textSize="16sp" />

                        </RelativeLayout>

                        <EditText
                            android:id="@+id/ad_rent"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="22dp"
                            android:autofillHints="Enter your rent"
                            android:background="@drawable/edit_text_bg"
                            android:fontFamily="@font/roboto"
                            android:inputType="number"
                            android:paddingStart="30dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            tools:ignore="LabelFor,RtlSymmetry" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/ad_rent"
                            android:layout_alignParentStart="@+id/ad_rent"
                            android:layout_marginStart="18dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/taka_sign"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="105dp"
                            android:fontFamily="@font/roboto"
                            android:text="@string/address"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/address"
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:autofillHints="Enter your address"
                            android:background="@drawable/edit_text_bg"
                            android:fontFamily="@font/roboto"
                            android:gravity="top|start"
                            android:inputType="textMultiLine"
                            android:paddingStart="20dp"
                            android:paddingTop="10dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="10dp"
                            android:textCursorDrawable="@drawable/cursor_color"
                            tools:ignore="LabelFor,RtlSymmetry" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="120dp"
                        android:fontFamily="@font/roboto"
                        android:text="@string/thana"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/thana"
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:background="@drawable/edit_text_bg"
                        android:fontFamily="@font/roboto"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="55dp"
                            android:layout_marginTop="30dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/roboto"
                                android:text="@string/vacant_from"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/vacant_text"
                                android:layout_width="120dp"
                                android:layout_height="35dp"
                                android:background="@drawable/edit_text_bg"
                                android:fontFamily="@font/roboto"
                                android:paddingTop="7dp"
                                android:text="@string/none"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60dp"
                            android:layout_marginTop="30dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/roboto"
                                android:text="@string/flat_type"
                                android:textSize="16sp" />

                            <Spinner
                                android:id="@+id/flat_type_spinner"
                                android:layout_width="120dp"
                                android:layout_height="35dp"
                                android:background="@drawable/edit_text_bg"
                                android:fontFamily="@font/roboto"
                                android:textAlignment="center"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="55dp"
                            android:layout_marginTop="30dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/roboto"
                                android:text="@string/washrooms"
                                android:textSize="16sp" />

                            <Spinner
                                android:id="@+id/washroom_spinner"
                                android:layout_width="120dp"
                                android:layout_height="35dp"
                                android:background="@drawable/edit_text_bg"
                                android:fontFamily="@font/roboto"
                                android:textAlignment="center"
                                android:textSize="20sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60dp"
                            android:layout_marginTop="30dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/roboto"
                                android:text="@string/verandas"
                                android:textSize="16sp" />

                            <Spinner
                                android:id="@+id/verandas_spinner"
                                android:layout_width="120dp"
                                android:layout_height="35dp"
                                android:background="@drawable/edit_text_bg"
                                android:fontFamily="@font/roboto"
                                android:textAlignment="center"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="55dp"
                            android:layout_marginTop="30dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/roboto"
                                android:text="@string/bedrooms"
                                android:textSize="16sp" />

                            <Spinner
                                android:id="@+id/bedroom_spinner"
                                android:layout_width="120dp"
                                android:layout_height="35dp"
                                android:background="@drawable/edit_text_bg"
                                android:fontFamily="@font/roboto"
                                android:textAlignment="center"
                                android:textSize="20sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60dp"
                            android:layout_marginTop="30dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/roboto"
                                android:text="@string/floor"
                                android:textSize="16sp" />

                            <Spinner
                                android:id="@+id/floor_spinner"
                                android:layout_width="120dp"
                                android:layout_height="35dp"
                                android:background="@drawable/edit_text_bg"
                                android:fontFamily="@font/roboto"
                                android:textAlignment="center"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="55dp"
                            android:layout_marginTop="30dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/roboto"
                                android:text="@string/religion"
                                android:textSize="16sp" />

                            <Spinner
                                android:id="@+id/religion_spinner"
                                android:layout_width="120dp"
                                android:layout_height="35dp"
                                android:background="@drawable/edit_text_bg"
                                android:fontFamily="@font/roboto"
                                android:textAlignment="center"
                                android:textSize="20sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60dp"
                            android:layout_marginTop="30dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/roboto"
                                android:text="@string/genre"
                                android:textSize="16sp" />

                            <Spinner
                                android:id="@+id/genre_spinner"
                                android:layout_width="120dp"
                                android:layout_height="35dp"
                                android:background="@drawable/edit_text_bg"
                                android:fontFamily="@font/roboto"
                                android:textAlignment="center"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="58dp"
                            android:fontFamily="@font/roboto"
                            android:text="@string/other_services"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="55dp"
                            android:layout_marginTop="30dp">

                            <EditText
                                android:id="@+id/current_bill"
                                android:layout_width="120dp"
                                android:layout_height="35dp"
                                android:layout_marginTop="22dp"
                                android:background="@drawable/edit_text_bg"
                                android:fontFamily="@font/roboto"
                                android:inputType="number"
                                android:paddingStart="24dp"
                                android:textCursorDrawable="@drawable/cursor_color"
                                tools:ignore="RtlSymmetry" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginStart="12dp"
                                android:layout_marginBottom="7dp"
                                android:text="@string/taka_sign"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="35dp"
                                android:fontFamily="@font/roboto"
                                android:text="@string/current_bill"
                                android:textSize="16sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="60dp"
                            android:layout_marginTop="30dp">

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/roboto"
                                android:text="@string/water_bill"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginStart="12dp"
                                android:layout_marginBottom="7dp"
                                android:text="@string/taka_sign"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/water_bill"
                                android:layout_width="120dp"
                                android:layout_height="35dp"
                                android:layout_marginTop="22dp"
                                android:background="@drawable/edit_text_bg"
                                android:fontFamily="@font/roboto"
                                android:inputType="number"
                                android:paddingStart="24dp"
                                android:textCursorDrawable="@drawable/cursor_color"
                                tools:ignore="RtlSymmetry" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="55dp"
                            android:layout_marginTop="30dp">

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/roboto"
                                android:text="@string/gas_bill"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginStart="12dp"
                                android:layout_marginBottom="7dp"
                                android:text="@string/taka_sign"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/gas_bill"
                                android:layout_width="120dp"
                                android:layout_height="35dp"
                                android:layout_marginTop="22dp"
                                android:background="@drawable/edit_text_bg"
                                android:fontFamily="@font/roboto"
                                android:inputType="number"
                                android:paddingStart="24dp"
                                android:textCursorDrawable="@drawable/cursor_color"
                                tools:ignore="RtlSymmetry" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="60dp"
                            android:layout_marginTop="30dp">

                            <TextView
                                android:id="@+id/textView18"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/roboto"
                                android:text="@string/service_charge"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginStart="12dp"
                                android:layout_marginBottom="7dp"
                                android:text="@string/taka_sign"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/service_charge"
                                android:layout_width="120dp"
                                android:layout_height="35dp"
                                android:layout_marginTop="22dp"
                                android:background="@drawable/edit_text_bg"
                                android:fontFamily="@font/roboto"
                                android:inputType="number"
                                android:paddingStart="24dp"
                                android:textCursorDrawable="@drawable/cursor_color"
                                tools:ignore="RtlSymmetry" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="58dp"
                            android:fontFamily="@font/roboto"
                            android:text="@string/other_facilities"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/textView19"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto"
                                android:gravity="start|center"
                                android:text="@string/lift"
                                android:textSize="18sp" />

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/lift"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:lottie_fileName="tick.json" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/textView20"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto"
                                android:gravity="start|center"
                                android:text="@string/generator"
                                android:textSize="18sp" />

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/generator"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:lottie_fileName="tick.json" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/textView21"
